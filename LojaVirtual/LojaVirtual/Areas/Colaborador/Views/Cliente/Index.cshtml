@model X.PagedList.IPagedList<LojaVirtual.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Cliente</h1>

<br />
<br />

<form method="get">
    <div class="form-group">
        <label for="pesquisa"></label>
        <input type="text" name="pesquisa" id="pesquisa" class="form-control" placeholder="Digite o nome ou e-mail do cliente">
    </div>  
    <button type="submit" class="btn btn-primary">OK</button> 
</form>

<br />
<br />

@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)
{

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Nome)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Email)</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Cliente cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Id</th>
                        <td>@Html.DisplayFor(model => cliente.Nome)</td>
                        <td>@Html.DisplayFor(model => cliente.Email)</td>
                        <td>
                            @if (cliente.Situacao == "A")
                            {
                                <a asp-action="GerarSenha" asp-route-id="@cliente.Id" class="btn btn-secondary">Desativar</a>
                            }
                            else
                            {
                                <a asp-action="Atualizar" asp-route-id="@cliente.Id" class="btn btn-secondary">Ativar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))

}

else
{
    <br />
    <br />
    <span>Nenhum registro cadastrado !</span>
}